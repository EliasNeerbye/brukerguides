<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Dashboard</title>
        <link rel="stylesheet" href="/styles/dashboard.css">
    </head>
    <body>
        <%- include("partials/header") %>
        <main id="main">
            <section id="editIdSection">
                <div>
                    <label for="editId">Edit ID: </label>
                    <input type="text" name="editId" id="editId" placeholder="CoolID">
                </div>
                <button type="button" id="editIdLoader" onclick="loadEditId()">Edit</button>
            </section>
            <form action="/makeGuide" enctype="multipart/form-data" id="guideForm" method="post">
                <input type="text" name="title" id="title" placeholder="Title">
                <section id="section1" class="aSection">
                    <input type="text" name="section1H2" class="header2" id="section1H2" placeholder="Header">
                    <div class="addDelBtnsDiv">
                        <button type="button" onclick="addDiv('section1')">Add div</button>
                        <button type="button" onclick="deleteSection('section1')">Delete section</button>
                    </div>
                    <div id="section1Div1" class="sectionContent">
                        <div class="sectionParagraph">
                            <textarea name="section1P1" id="section1P1" placeholder="Paragraph"></textarea>
                            <input type="text" name="section1P1Id" id="section1P1Id" class="idInput" placeholder="Id?">
                        </div>
                        <label for="section1Img1" class="sectionImgLabel"><p>Select Image</p><input type="file" name="section1Img1" onchange="handleFileChange(this)" class="sectionImageInput" id="section1Img1" title="Image"></label>
                        <button type="button" onclick="deleteDiv('section1', 'section1Div1')">Delete div</button>
                    </div>
                </section>
            </form>
        </main>
        <footer>
            <button type="button" onclick="addSection()">Add section</button>
            <button type="button" onclick="finished()">Finish!</button>
        </footer>
        <script src="/js/dynamicCreationDashboard.js"></script>
        <script>
            function handleFileChange(elem) {
                if (elem.files.length > 0) {
                    // File has been selected
                    elem.parentElement.style.borderStyle = "solid";
                    elem.parentElement.style.width = "90%";
                    elem.parentElement.style.alignSelf = "center"
                    elem.previousSibling.textContent = elem.files[0].name + " selected.";
                }
            }

            function finished() {
                // Create a FormData object from the form element
                const formData = new FormData(document.getElementById("guideForm"));

                // Send the form data using fetch
                fetch(document.getElementById("guideForm").action, {
                    method: 'POST', // Assuming you want to send a POST request
                    body: formData,
                })
                .then(response => {
                    // Check if the response status is OK (status code 200-299)
                    if (!response.ok) {
                        return response.text().then(text => {
                            throw new Error(`Network response was not ok: ${text}`);
                        });
                    }
                    // Return the response as JSON
                    return response.json();
                })
                .then(data => {
                    // Check if the response contains a 'message' field
                    if (data.message) {
                        if (data.success) { // Assuming 'success' is a field in your response
                            alert('Success: ' + data.message);
                        } else {
                            alert('Failure: ' + data.message);
                        }
                    } else {
                        console.warn('Response did not contain a message');
                    }
                })
                .catch(error => {
                    // Handle any errors here
                    alert('Error: ' + error.message);
                });
            }


        </script>
    </body>
</html>